<div id="Company-fields">
<div class="form-group">
    <label class="col-sm-4 control-label"> Company name </label>
    <div class="col-sm-7">
        <input class="form-control" type="text" name ="company_name" placeholder="Name of Company" data-validation="custom" data-validation-regexp="^[a-zA-Z, 0-9.-]+$" data-validation-error-msg="Please enter the name of your company">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label"> Company address </label>
    <div class="col-sm-7">
        <input class="form-control" type="text" name ="company_address" placeholder="Street name, number of building" data-validation="custom" data-validation-regexp="^[a-zA-Z, 0-9.-]+$" data-validation-error-msg="Please enter the adress of your company">
    </div>
</div>
<div class="form-group">
    <label class="col-sm-4 control-label">  Website </label>
    <div class="col-sm-7">
        <input class="form-control" type="text" name ="website" placeholder="http://domain.domain zone" data-validation="url">
    </div>
</div>
</div>    